# Campfire Emergency Helper - Deployment Configuration Template
# Copy this file to deployment.env and customize for your environment

# Server Configuration
CAMPFIRE_HOST=0.0.0.0
CAMPFIRE_PORT=8000
CAMPFIRE_DEBUG=false

# LLM Provider Configuration
# Options: ollama, vllm, lmstudio
CAMPFIRE_LLM_PROVIDER=ollama

# Database Paths
CAMPFIRE_CORPUS_DB=/app/corpus/processed/corpus.db
CAMPFIRE_AUDIT_DB=/app/data/audit.db

# Policy Configuration
CAMPFIRE_POLICY_PATH=/app/policy.md

# Security Configuration
# IMPORTANT: Change this password in production!
CAMPFIRE_ADMIN_PASSWORD=admin123

# Optional: Ollama Configuration (if using Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# Optional: vLLM Configuration (if using vLLM)
VLLM_MODEL_PATH=/models/llama2-7b
VLLM_GPU_MEMORY_UTILIZATION=0.8

# Optional: LM Studio Configuration (if using LM Studio)
LMSTUDIO_HOST=http://localhost:1234

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/campfire.log

# Resource Limits (for Docker)
MEMORY_LIMIT=4g
CPU_LIMIT=2.0

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_INCLUDE_LOGS=false